{
  "name": "@shirokuma-library/shirokuma-docs",
  "version": "0.1.0-alpha.8",
  "description": "Next.js プロジェクト用ドキュメント自動生成 CLI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "shirokuma-docs": "./bin/shirokuma-docs"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "prepare": "[ -d .githooks ] && git config core.hooksPath .githooks; tsc"
  },
  "keywords": [
    "documentation",
    "cli",
    "nextjs",
    "typedoc",
    "drizzle",
    "dbml"
  ],
  "author": "ShirokumaLibrary",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShirokumaLibrary/shirokuma-docs.git"
  },
  "homepage": "https://github.com/ShirokumaLibrary/shirokuma-docs#readme",
  "bugs": {
    "url": "https://github.com/ShirokumaLibrary/shirokuma-docs/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "glob": "^13.0.3",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "markdown-it": "^14.1.1",
    "mdast-util-to-string": "^4.0.0",
    "minimatch": "^10.2.0",
    "ora": "^9.3.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "tiktoken": "^1.0.22",
    "ts-morph": "^27.0.2",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.3",
    "yaml": "^2.6.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/mdast": "^4.0.4",
    "@types/node": "^25.2.3",
    "@types/unist": "^3.0.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "dependency-cruiser": ">=16.0.0",
    "drizzle-dbml-generator": ">=0.7.0",
    "typedoc": ">=0.26.0",
    "typedoc-plugin-markdown": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "typedoc": {
      "optional": true
    },
    "typedoc-plugin-markdown": {
      "optional": true
    },
    "dependency-cruiser": {
      "optional": true
    },
    "drizzle-dbml-generator": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "bin",
    "templates",
    "i18n",
    "portal/app",
    "portal/components",
    "portal/lib",
    "portal/types",
    "portal/public",
    "portal/package.json",
    "portal/next.config.ts",
    "portal/tsconfig.json",
    "portal/postcss.config.mjs",
    "portal/components.json",
    "LICENSE",
    "README.md",
    "THIRD_PARTY_NOTICES.md"
  ]
}
